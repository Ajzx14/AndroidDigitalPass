<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="0dp">


    <android.support.v7.widget.CardView
        android:id="@+id/show_card"
        android:layout_width="match_parent"
        android:layout_height="581dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="150dp"
        android:visibility="invisible"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/go_back"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/close" />

            <ImageView
                android:id="@+id/go_profile"
                android:layout_width="48dp"
                android:layout_height="41dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/profile12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="261dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/blackbg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/full_name_show"
                    style="@style/name"
                    android:layout_width="220dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Full Name"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/paidtill_show"
                    style="@style/name"
                    android:layout_width="221dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    android:text="Paid Till"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/email_show"
                    style="@style/subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Email -ID"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/mobile_show"
                    style="@style/subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Mobile Number"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/bustype_show"
                    style="@style/subname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:text="Bustype"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic_show"
                android:layout_width="193dp"
                android:layout_height="200dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"

                android:scaleType="centerCrop" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Spinner
        android:id="@+id/spinner_id"
        android:layout_width="393dp"
        android:layout_height="47dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:entries="@array/college" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:layout_above="@+id/btnAction_re"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-625dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtBarcodeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="648dp"
        android:text="No Barcode Detected"
        android:textColor="@android:color/white"
        android:textSize="24sp" />


    <Button
        android:id="@+id/btnAction_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="ADD CONTENT IN THE MAIL"
        android:visibility="gone" />

</RelativeLayout>
