<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".renew">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <EditText
                android:id="@+id/re_id"
                android:layout_width="150dp"
                android:layout_height="54dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="305dp"
                android:layout_marginTop="10dp"
                android:background="#324c99"
                android:text="Search"
                android:textColor="@android:color/white" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/scan"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="550dp"
                android:clickable="true"
                android:visibility="invisible"
                app:backgroundTint="@color/button_border"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_re"
                android:layout_width="match_parent"
                android:layout_height="459dp"
                android:layout_marginTop="100dp"
                android:background="#2f3028"
                android:padding="20dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/re_submit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="400dp"
                    android:background="#324c99"
                    android:text="S A V E"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/r_amount"
                    android:layout_width="179dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="220dp"
                    android:ems="10"
                    android:hint="Amount"
                    android:inputType="number"
                    android:paddingLeft="10dp" />

                <EditText
                    android:id="@+id/r_paidtill"
                    android:layout_width="185dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="220dp"
                    android:ems="10"
                    android:hint="Paidtill"
                    android:inputType="text"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/r_amounttype"
                    android:layout_width="377dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="291dp"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/type"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/r_bustype"
                    android:layout_width="377dp"
                    android:layout_height="53dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="151dp"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/bustype"
                    android:spinnerMode="dropdown" />

                <EditText
                    android:id="@+id/paidtill2"
                    android:layout_width="188dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="530dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Paidtill"
                    android:inputType="text"
                    android:padding="5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/r_image"
                    android:layout_width="122dp"
                    android:layout_height="116dp"

                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/r_f_name"
                    style="@style/name"
                    android:layout_width="238dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="145dp"
                    android:text="F Name"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/r_m_name"
                    android:layout_width="238dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="40dp"
                    android:text="M Name"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/r_l_name"
                    android:layout_width="238dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="80dp"
                    android:text="L Name"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/r_email"
                    android:layout_width="238dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="110dp"
                    android:text="Email Address"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/r_number"
                    android:layout_width="238dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="350dp"
                    android:text="Mobile Number"
                    android:textSize="24sp" />
            </android.support.v7.widget.CardView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="620dp"
                android:background="@drawable/buttonlayout"
                android:clickable="true"
                app:backgroundTint="#324c99"
                app:srcCompat="@android:drawable/ic_menu_view" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="588dp"
                android:clickable="true"
                app:backgroundTint="#cc0100"
                app:srcCompat="@android:drawable/ic_menu_manage" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="588dp"
                android:clickable="true"
                android:visibility="invisible"
                app:backgroundTint="#cc0100"
                app:srcCompat="@android:drawable/ic_menu_delete" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="588dp"
                android:clickable="true"
                android:visibility="invisible"
                app:backgroundTint="#cc0100"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <Spinner
                android:id="@+id/spinner_college_renew"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="10dp"
                android:entries="@array/college" />
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>