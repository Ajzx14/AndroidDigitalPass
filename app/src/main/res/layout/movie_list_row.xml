<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="0dp"
    android:paddingRight="4dp"
    android:paddingBottom="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/list_card"
        android:layout_width="391dp"
        android:layout_height="99dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/l_f_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/convergence"

            android:text="F Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/l_email"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="35dp"
            android:text="Email Address"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/l_stand"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="60dp"
            android:text="Stand"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/l_bustype"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="110dp"
            android:text="Bus Type"
            android:textSize="18sp"
            android:visibility="invisible"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/l_mobile"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="80dp"
            android:text="Mobile"
            android:textSize="10sp"
            android:visibility="invisible"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/l_route"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="60dp"
            android:text="Route"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="invisible"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/l_paidtill"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="110dp"
            android:text="Paid Till"
            android:textSize="18sp"
            android:visibility="invisible"
            app:fontFamily="sans-serif-black" />

        <TextView
            android:id="@+id/l_l_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="30dp"
            android:text="L Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/l_m_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="0dp"
            android:text="M Name"
            android:textSize="20sp"
            android:visibility="invisible"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/list_college_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:visibility="invisible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/l_pic"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>
</RelativeLayout>