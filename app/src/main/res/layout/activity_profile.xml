<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".profile">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="280dp"

        android:alpha=".6"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/profile_fname"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"


            android:autoText="false"
            android:capitalize="characters"
            android:paddingLeft="10dp"
            android:text="fname"
            android:textAllCaps="true"
            android:textColor="@color/bluewMatte"
            android:textSize="24sp"
            app:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/profile_mname"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"

            android:autoText="false"
            android:capitalize="characters"
            android:paddingLeft="8dp"
            android:text="mname"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/profile_lname"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="10dp"

            android:autoText="false"
            android:capitalize="characters"
            android:text="lname"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:fontFamily="sans-serif-medium" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="50dp"
            android:background="@color/bluewMatte" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="276dp"
            android:layout_height="232dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/login_gradiant"
            android:scaleType="fitXY"

            app:srcCompat="@drawable/p" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="330dp"
        android:background="@android:color/white"
        android:scrollbarStyle="outsideOverlay">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                app:cardBackgroundColor="#cc0100">

                <android.support.v7.widget.CardView
                    android:layout_width="349dp"
                    android:layout_height="123dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <TextView
                        android:id="@+id/profile_pnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"

                        android:paddingLeft="110dp"
                        android:text="P Number"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"

                        android:paddingLeft="10dp"
                        android:text="Parents :"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/profile_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="20dp"

                        android:paddingLeft="10dp"
                        android:text="Mobile Number"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView

                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"

                        android:paddingLeft="10dp"
                        android:text="Mobile: "
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="275dp"
                app:cardBackgroundColor="#324c99">

                <android.support.v7.widget.CardView
                    android:layout_width="331dp"
                    android:layout_height="113dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <TextView
                        android:id="@+id/profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="10dp"

                        android:paddingLeft="10dp"
                        android:text="Address"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"

                        android:paddingLeft="10dp"
                        android:text=": Address"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="#324c99">

                <android.support.v7.widget.CardView
                    android:layout_width="331dp"
                    android:layout_height="124dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="8dp">

                    <TextView
                        android:id="@+id/profile_paidtill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="15dp"


                        android:paddingLeft="10dp"
                        android:text="Paid till"
                        android:textColor="#cc0100"
                        android:textSize="20sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"

                        android:paddingLeft="10dp"
                        android:text="Paid till :"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/profile_bustype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="80dp"


                        android:paddingLeft="10dp"
                        android:text="bustype"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView

                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="80dp"

                        android:paddingLeft="10dp"
                        android:text="Bus Type :"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="231dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="55dp"

                        android:paddingLeft="10dp"
                        android:text="E mail"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView

                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"

                        android:paddingLeft="10dp"
                        android:text="E mail :"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                app:cardBackgroundColor="#cc0100">

                <android.support.v7.widget.CardView
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="8dp">

                    <TextView
                        android:id="@+id/profile_branch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="15dp"

                        android:paddingLeft="10dp"
                        android:text="Branch"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"

                        android:paddingLeft="10dp"
                        android:text="Branch :"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/profile_college"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="85dp"

                        android:paddingLeft="10dp"
                        android:text="College"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/profile_route"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="50dp"

                        android:paddingLeft="10dp"
                        android:text="Route"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"

                        android:paddingLeft="10dp"
                        android:text="Route :"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        app:fontFamily="sans-serif-medium" />
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/rescan"
        android:layout_width="100dp"
        android:layout_height="79dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="600dp"
        android:clickable="true"
        app:backgroundTint="#324c99"
        app:srcCompat="@android:drawable/ic_menu_camera" />

</RelativeLayout>